<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="?android:selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/MainPadding"
    android:weightSum="2">


    <ImageView
        android:id="@+id/iv_esubstances"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:src="@mipmap/ic_avoid" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_esubstance_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E 100"
            android:textColor="#000"
            android:textSize="@dimen/ESubstanceRowItemTitle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_esubstance_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="@string/tilte_esubstances_list_row"
            android:textColor="@color/accent"
            android:textSize="@dimen/ESubstanceRowItemName" />

    </LinearLayout>

</LinearLayout>
