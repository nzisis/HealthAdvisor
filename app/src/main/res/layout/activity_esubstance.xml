<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vromia.healthadvisor.Activities.ESubstanceActivity">

    <LinearLayout
        android:id="@+id/llesubstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/red"
        >

    <TextView
        android:id="@+id/tv_esubstance"
        android:text="E102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/tvState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/llesubstance"
        android:text="Dangerous"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/tv_esubstance_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llesubstance"
        android:layout_marginTop="10dp"
        android:text="Tartazinh"
        android:textColor="$000"
        android:textSize="28sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/llAttributes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/tv_esubstance_name"
        android:layout_marginTop="5dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attributes:"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1.4"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvAttribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="0.6"

            />

    </LinearLayout>





</RelativeLayout>
